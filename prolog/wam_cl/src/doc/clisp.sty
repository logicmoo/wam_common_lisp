\def\keys##1{{\tt \& key} \@settab {\tt ##1}}%
\def\morekeys##1{\@stopline\@startline\>{\tt\ignorespaces ##1}}%
\def\yetmorekeys##1{\@stopline\@startline\>{\tt\ignorespaces ##1}}%
\leavevmode\hbox to 0pt{\hbox to \textwidth{\hss\box0}\hss}% [kind]
{\box1\begin{minipage}[t]{1\wd2}
                \vskip -20pt% Compensate line introduced by tabbing
\begin{tabbing}#1\end{tabbing}\end{minipage}}
\below@defun
}


