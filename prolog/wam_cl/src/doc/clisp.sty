}

\def\@defunnopackage{%
\setbox0\hbox{\defun@hspace$\lbrack$\it\defun@type\/$\rbrack$}\relax
\setbox1\hbox{\tt\defun@name\defun@hspace}\relax
\@defun
}

\def\@defun#1{
\above@defun
\setbox2\hbox{\hskip\textwidth\hskip-1\wd0\hskip-1\wd1}\relax
